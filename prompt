      "datePublished": "[CURRENT_DATE]",
      "dateModified": "[CURRENT_DATE]"
    }
    </script>
    
    <!-- Shared CSS -->
    <link rel="stylesheet" href="/assets/css/blog-style.css">
    
    <style>
        /* Inline critical CSS here - use gradient purple/blue theme */
        * { margin: 0; padding: 0; box-sizing: border-box; }
